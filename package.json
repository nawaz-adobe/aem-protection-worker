{
	"name": "aem-protection-worker",
	"version": "0.0.0",
	"private": true,
	"workspaces": [
		"platforms/cloudflare",
		"platforms/akamai"
	],
	"scripts": {
		"dev:cloudflare": "npm run dev --workspace=platforms/cloudflare",
		"test:cloudflare": "npm run test --workspace=platforms/cloudflare",
		"deploy:cloudflare": "npm run deploy --workspace=platforms/cloudflare",
		"build:akamai:production": "npm run build:production --workspace=platforms/akamai",
		"validate:akamai": "npm run validate --workspace=platforms/akamai",
		"build:validate:akamai": "npm run build:validate --workspace=platforms/akamai",
		"deploy:akamai": "npm run deploy --workspace=platforms/akamai",
		"lint": "eslint platforms/",
		"lint:fix": "eslint platforms/ --fix",
		"test": "npm run test:cloudflare",
		"install:all": "npm install && npm install --workspace=platforms/cloudflare && npm install --workspace=platforms/akamai"
	},
	"devDependencies": {
		"@eslint/js": "^9.31.0",
		"eslint": "^9.31.0"
	}
}